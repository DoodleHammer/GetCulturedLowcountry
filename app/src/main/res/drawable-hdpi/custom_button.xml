<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#e7c547" />
            <gradient android:angle="-90" android:endColor="#7c5134" android:startColor="#5b2501" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <stroke android:width="3dip" android:color="#e7c547" />
            <solid android:color="#Add6ad" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#e7c547" />
            <gradient android:angle="-90" android:endColor="#995b34" android:startColor="#803201" />
        </shape>
    </item>
</selector>