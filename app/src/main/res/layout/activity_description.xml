<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/newback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".DescriptionActivity">


        <!-- This image represents the logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/hello_world"
            android:scaleType="fitCenter"
            android:src="@drawable/wiz_logo" />


        <!-- this image is the central image -->
        <ImageView
            android:id="@+id/centralImageView"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/hello_world"
            android:scaleType="fitXY" />


        <!-- This is the main description of the organization  -->
        <TextView
            android:id="@+id/textView1"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/centralImageView"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/string_zero"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- About app and us -->
        <TextView
            android:id="@+id/textView2"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/about_us"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Addrss  -->
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:autoLink="all"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textColorLink="#2b1100"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/contact_us_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/contact_us"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <!--  This is the view that contains the email addresses -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_us_at"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:textColorLink="#2b1100"
            android:textSize="16sp" />


        <!-- This is the view which contains the weblink   -->
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:autoLink="web"
            android:gravity="center"
            android:linksClickable="true"
            android:textColor="#ffffff"
            android:textColorLink="#2b1100"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/uscb"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/hello_world"
            android:scaleType="fitCenter"
            android:src="@drawable/uscb_logo" />


    </RelativeLayout>
</ScrollView>
